<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Set Location"
        android:id="@+id/alarm_text"
        android:allowUndo="false"
        android:textColor="#007bff"
        android:textSize="30dp"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/alarm_location_text"
        android:allowUndo="false"
        android:text="Waiting for location..."
        android:textColor="#007bff"
        android:textSize="30dp"
        android:textIsSelectable="false" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:id="@+id/alarm_picker"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Min"
            android:id="@+id/Hour_Loc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sec"
            android:id="@+id/Min_Loc" />


        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberPickerMin_Loc"
            android:orientation="vertical"
            android:layout_marginRight="20dp" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberPickerSec_Loc"
            android:orientation="vertical" />

    </GridLayout>

    <ToggleButton
        android:textOff="SET"
        android:textOn="CANCEL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_set_alarm"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:checked="false" />

</LinearLayout>